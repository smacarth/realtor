<%= form_for(@house) do |f| %>
  <div class="form">
    <% if @house.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@house.errors.count, "error") %> prohibited this house from being saved:</h2>

        <ul>
        <% @house.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :mls, "MLS #" %><br>
      <%= f.number_field :mls %>
    </div>
    <div class="field">
      <%= f.label :street_1, "Street Address" %><br>
      <%= f.text_field :street_1 %>
    </div>
    <div class="field">
      <%= f.label :street_2, "Address 2" %><br>
      <%= f.text_field :street_2 %>
    </div>
    <div class="field">
      <%= f.label :city %><br>
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :state %><br>
      <%= f.text_field :state %>
    </div>
    <div class="field">
      <%= f.label :zipcode %><br>
      <%= f.number_field :zipcode %>
    </div>
    <div class="field">
      <%= f.label :neighborhood %><br>
      <%= f.text_field :neighborhood %>
    </div>
    <div class="field">
      <%= f.label :sales_price %><br>
      <%= f.number_field :sales_price %>
    </div>
    <div class="field">
      <%= f.label :date_listed %><br>
      <%= f.date_select :date_listed %>
    </div>
    <div class="field">
      <%= f.label :bedrooms %><br>
      <%= f.number_field :bedrooms %>
    </div>
    <div class="field">
      <%= f.label :bathrooms %><br>
      <%= f.number_field :bathrooms %>
    </div>
    <div class="field">
      <%= f.label :garage_size %><br>
      <%= f.number_field :garage_size %>
    </div>
    <div class="field">
      <%= f.label :square_feet %><br>
      <%= f.number_field :square_feet %>
    </div>
    <div class="field">
      <%= f.label :lot_size %><br>
      <%= f.number_field :lot_size %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <%= f.fields_for :photos do |ff| %>
      <div>
        <%= ff.label :image, "Image #{ff.options[:child_index] + 1}" %>
        <%= ff.text_field :title %>
        <%= ff.file_field :image %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
